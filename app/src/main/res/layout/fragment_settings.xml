<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IoU Threshold"
        android:layout_marginTop="16dp"/>

    <SeekBar
        android:id="@+id/seekbar_iou_threshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"/>

    <TextView
        android:id="@+id/text_iou_threshold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confidence Threshold"
        android:layout_marginTop="16dp"/>

    <SeekBar
        android:id="@+id/seekbar_confidence_threshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="30"/>

    <TextView
        android:id="@+id/text_confidence_threshold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.3"/>
</LinearLayout>